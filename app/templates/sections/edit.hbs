{{page-title "Edit"}}

<div class="ui container">
    <form class="ui form">
        <h4 class="ui dividing header">Modifier une section</h4>
        <div class="field">
            <label>Nom</label>
            <Input type="text" @value={{@model.name}} placeholder="Nom de la section" required />
        </div>
        <div class="field">
            <label>Description</label>
            <Input type="text" @value={{@model.description}} placeholder="Description de la section" required />
        </div>
        <button {{ action 'editSection' @model }} type="submit" class="ui green button">Modifier la section</button>
        <LinkTo @route="sections" class="ui red button">
            Annuler
        </LinkTo>
    </form>
    <hr>




    <div class="ui container">
        <h2>{{ @model.name }} ({{ @model.products.length }})</h2>
        <LinkTo @route="sections.addProduct" class="ui blue button">
            Nouveau produit
        </LinkTo>
    </div>

    <h4>Liste des produits de la section {{ @model.name }}</h4>
    <table class="ui very basic collapsing celled table">
        {{#each @model.products as |product|}}
        <tr>
            <td>
                {{ product.name }}
            </td>
            <td>
                {{ product.price }} â‚¬
            </td>
            <td>
                <button class="ui blue button"><i class="edit icon"></i></button>
            </td>
            <td>
                <button class="ui red button">
                    <i class="delete icon"></i>
                </button>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{outlet}}