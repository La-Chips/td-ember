{{page-title "AddProduct"}}
<div class="ui container">
    <form class="ui form">
        <h4 class="ui dividing header">Ajouter un produit</h4>

        <div class="field">
            <select class="ui dropdown">
                {{#each @model as |section|}}
                <option value="{{section.name}}">{{section.name}}</option>
                {{/each}}

            </select>
        </div>
        <div class="field">
            <label>Nom</label>
            <Input type="text" @value={{@model.products.name}} placeholder="Nom du produit" required />
        </div>
        <div class="field">
            <label>Comments</label>
            <Input type="text" @value={{@model.products.comments}} placeholder="Commentaire du produit" required />
        </div>
        <div class="field">
            <label>Image</label>
            <Input type="text" @value={{@model.products.image}} placeholder="Nom de l'image du produit" required />
        </div>
        <div class="field">
            <label>Prix</label>
            <Input type="number" min="0" @value={{@model.products.price}} placeholder="Prix du produit" required />
        </div>
        <div class="field">
            <label>Promotion</label>
            <Input type="number" min="0" @value={{@model.products.promotion}} placeholder="Promotion du produit"
                required />
        </div>
        <button {{ action 'addProduct' @model.products }} type="submit" class="ui green button">Ajouter le
            produit</button>
        <LinkTo @route="sections" class="ui red button">
            Annuler
        </LinkTo>
    </form>
</div>
{{outlet}}