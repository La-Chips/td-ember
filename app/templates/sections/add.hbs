{{page-title "Add"}}
<div class="ui container">
    <form class="ui form">
        <h4 class="ui dividing header">Ajouter une section</h4>
        <div class="field">
            <label>Nom</label>
            <Input type="text" @value={{@model.name}} placeholder="Nom de la section" required />
        </div>
        <div class="field">
            <label>Description</label>
            <Input type="text" @value={{@model.description}} placeholder="Description de la section" required />
        </div>
        <button {{ action 'addSection' @model }} type="submit" class="ui green button">Ajouter la section</button>
        <LinkTo @route="sections" class="ui red button">
            Annuler
        </LinkTo>
    </form>
</div>
{{outlet}}